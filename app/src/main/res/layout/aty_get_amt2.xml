<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:padding="10dp"
             android:background=""
             android:id="@+id/tl_Container"
             android:orientation="vertical">

    <Space
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <EditText
        android:id="@+id/et_Amt"
        android:focusable="false"
        android:drawablePadding="10dp"
        android:hint="金额："
        android:drawableLeft="@mipmap/rmb"
        android:layout_height="0dp"
        android:layout_weight="2"
        />

    <TableRow
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/bt_1"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="3dip"
            android:text="1"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/bt_2"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="3dip"
            android:text="2"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/bt_3"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="3dip"
            android:text="3"
            android:textStyle="bold"/>

    </TableRow>

    <TableRow
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/bt_4"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="3dip"
            android:text="4"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/bt_5"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="3dip"
            android:text="5"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/bt_6"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="3dip"
            android:text="6"
            android:textStyle="bold"
            />


    </TableRow>


    <TableRow
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/bt_7"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="3dip"
            android:text="7"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/bt_8"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="3dip"
            android:text="8"
            android:textStyle="bold"
           />

        <Button
            android:id="@+id/bt_9"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="3dip"
            android:text="9"
            android:textStyle="bold"/>

    </TableRow>

    <TableRow
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/bt_Dot"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="3dip"
            android:text="."
            android:textStyle="bold"/>

        <Button
            android:id="@+id/bt_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="3dip"
            android:text="0"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/bt_Del"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="3dip"
            android:text="X"
            android:textStyle=""/>

    </TableRow>

    <Button
        android:id="@+id/bt_Confirm"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#85AE48"
        android:text="确认"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        />

</TableLayout>